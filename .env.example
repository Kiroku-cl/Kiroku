# Whisper model (local): tiny, base, small, medium, large
WHISPER_MODEL=base

# Idioma: es (español), en (inglés), auto (detectar)
WHISPER_LANGUAGE=es

# Duración de cada chunk de audio en segundos
CHUNK_DURATION=5

# Directorio para guardar proyectos y jobs
DATA_DIR=data

# OpenAI API key (requerido para LLM y estilizado de imágenes)
OPENAI_API_KEY=sk-...

# Modelo LLM para generación de guion
LLM_MODEL=gpt-4o-mini

# Habilitar estilizado de imágenes con OpenAI gpt-image-1
# Convierte las fotos en dibujos de líneas (fondo blanco, contornos negros)
IMAGE_STYLE_ENABLED=true

# Tamaño máximo de imagen en bytes (default 2MB)
MAX_IMAGE_SIZE=2097152
